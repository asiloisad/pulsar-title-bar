{
  "name": "title-bar",
  "version": "0.4.3",
  "description": "Theme-aware title bar",
  "main": "./lib/main.js",
  "keywords": [
    "title bar"
  ],
  "repository": "https://github.com/asiloisad/pulsar-title-bar",
  "license": "MIT",
  "engines": {
    "atom": ">=1.100.0 <2.0.0"
  },
  "configSchema": {
    "controlTheme": {
      "order": 1,
      "title": "Window Controls Theme",
      "type": "string",
      "enum": [
        "Windows 11",
        "macOS Tahoe",
        "GNOME"
      ],
      "default": "Windows 11"
    },
    "logoStyle": {
      "order": 2,
      "title": "Logo Style",
      "type": "string",
      "enum": [
        "Filled",
        "Unfilled",
        "None"
      ],
      "default": "Filled"
    },
    "customContextMenus": {
      "order": 3,
      "title": "Custom Context Menus",
      "description": "Use custom styled HTML context menus instead of native Electron menus. Matches the title bar styling.",
      "type": "boolean",
      "default": true
    },
    "autoHide": {
      "order": 4,
      "title": "Auto Hide Menu Bar",
      "description": "Automatically hide the menu bar and toggle it by pressing Alt.",
      "type": "boolean",
      "default": true
    },
    "altGivesFocus": {
      "order": 5,
      "title": "Alt Gives Focus",
      "description": "Releasing the alt key gives focus to the application menu.",
      "type": "boolean",
      "default": true
    }
  }
}
